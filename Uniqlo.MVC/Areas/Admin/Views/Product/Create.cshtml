@model Product;
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Product</h4>
            <p class="card-description">
            </p>
            <form method="post"  class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputTitle">ProductName</label>
                    <input asp-for="ProductName" type="text" class="form-control" id="exampleInputTitle" placeholder="ProductName">
                    <span class="text-danger" asp-validation-for="ProductName"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputTitle">Category</label>
                    <input asp-for="Category" type="text" class="form-control" id="exampleInputTitle" placeholder="Category">
                    <span class="text-danger" asp-validation-for="Category"></span>
                </div>

                <a class="btn btn-light" asp-controller="Product" asp-action="Index">Cancel</a>
                <button type="submit" class="btn btn-primary mr-2">Create</button>
            </form>
        </div>
    </div>
</div>