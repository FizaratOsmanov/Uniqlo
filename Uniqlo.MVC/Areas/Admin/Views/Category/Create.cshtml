@model Category;
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Category</h4>
            <p class="card-description">
            </p>
            <form method="post"  class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputTitle">CategoryName</label>
                    <input asp-for="CategoryName" type="text" class="form-control" id="exampleInputTitle" placeholder="CategoryName">
                    <span class="text-danger" asp-validation-for="CategoryName"></span>
                </div>
                <a class="btn btn-light" asp-controller="Category" asp-action="Index">Cancel</a>
                <button type="submit" class="btn btn-primary mr-2">Create</button>
            </form>
        </div>
    </div>

</div>